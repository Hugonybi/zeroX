# Application
PORT=4000
NODE_ENV=development
API_BASE_URL=http://localhost:4000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/hedera_marketplace?schema=public"

# JWT
# SECURITY: Generate strong secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# These MUST be different for access and refresh tokens
# Minimum 64 bytes (128 hex characters) recommended
JWT_ACCESS_SECRET=changeme_generate_with_node_crypto_randomBytes_64_hex
JWT_REFRESH_SECRET=changeme_generate_different_secret_with_node_crypto_randomBytes_64_hex
JWT_ACCESS_TTL=900s
JWT_REFRESH_TTL=7d

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Paystack
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
PAYSTACK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# Hedera - Operator Account (for transactions)
HEDERA_ACCOUNT_ID=0.0.xxxxx
HEDERA_PRIVATE_KEY=302e020100300506032b657004220420xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Hedera - Treasury Account (for token supply key)
HEDERA_TREASURY_ACCOUNT_ID=0.0.xxxxx
HEDERA_TREASURY_PRIVATE_KEY=302e020100300506032b657004220420xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Hedera - Token IDs (create these using the scripts)
# Authenticity Token - non-transferable proof of origin
HEDERA_NFT_TOKEN_ID=0.0.xxxxx
# Ownership Token - transferable RWA token with freeze controls
HEDERA_OWNERSHIP_TOKEN_ID=0.0.xxxxx

# Hedera - Minting Configuration
HEDERA_MINT_MAX_ATTEMPTS=3
HEDERA_RETRY_DELAY_MS=1000

# IPFS / Pinata
PINATA_API_KEY=xxxxxxxxxxxxxxxxxxxxx
PINATA_SECRET_API_KEY=xxxxxxxxxxxxxxxxxxxxx
